FROM alpine:3.10.2

RUN apk update && \
    apk add linux-headers \
            musl-dev \
            build-base \
            gcc \
            git \
            g++ \
            make \
            cmake \
            gcovr \
            valgrind \
            perl \
            bash \
            clang 
    
#Set working directory to mounted project directory
RUN mkdir /project_dir
WORKDIR /project_dir
